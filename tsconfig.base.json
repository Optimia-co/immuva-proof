{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "@immuva/*": ["packages/*/src/index.ts"],
      "@immuva/canonical": ["packages/canonical/src/index.ts"],
      "@immuva/protocol": ["packages/protocol/src/index.ts"],
      "@immuva/receipts": ["packages/receipts/src/index.ts"],
      "@immuva/identity": ["packages/identity/src/index.ts"],
      "@immuva/evidence": ["packages/evidence/src/index.ts"],
      "@immuva/non-equivocation": ["packages/non-equivocation/src/index.ts"],
      "@immuva/fsm": ["packages/fsm/src/index.ts"],
      "@immuva/verifier": ["packages/verifier/src/index.ts"]
    }
  }
}
