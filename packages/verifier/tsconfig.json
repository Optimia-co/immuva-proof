{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "noEmitOnError": true,
    "declaration": true,
    "declarationMap": false,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "ES2022",
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "references": [
    {
      "path": "../canonical"
    }
  ]
}